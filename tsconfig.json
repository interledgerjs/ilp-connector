{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
  ],
  "compileOnSave": true
}
